@model IEnumerable<Nop.Plugin.Widgets.BasicPlugins.Models.Category>

<!DOCTYPE html>
<html>
<head>
    <title> Categories</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.2/css/jquery.dataTables.min.css" />
    <style>
        /* Styling for the accordion */
        .accordion {
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-bottom: 10px;
        }

        .accordion-header {
            background-color: #f1f1f1;
            padding: 10px;
            cursor: pointer;
        }

            .accordion-header:hover {
                background-color: #ddd;
            }

            .accordion-header.active {
                background-color: #ccc;
            }

        .accordion-content {
            padding: 10px;
            /* display: none;*/
        }

            .accordion-content.show {
                display: block;
            }

        .row {
            width: 100%;
        }
    </style>

</head>
<body>
    <div class="container" style="padding: 10px; max-width:1600px;">
        <div class="row">
            <div class="col-md-6">
                <h2>Categories</h2>
            </div>
            <div class="col-md-6">
                <a href='@Url.Action("AddCategory", "DemoCategory")' class="btn btn-primary" style="float: right; margin-left: 15px;">Add Category</a>
                <button type="button" class="btn btn-danger" style="float:right;" id="btnDelete">Delete(selected)</button>

            </div>
        </div>

        <div class="accordion">
            <div class="accordion-header" onclick="toggleAccordion(event)"><i class="fa fa-search">&nbsp;&nbsp;&nbsp;</i>Search</div>
            <div class="accordion-content">

                @using (Html.BeginForm("CategoryList", "DemoCategory", FormMethod.Get, new { @onsubmit = "return checkvalidation()" }))
                {
                    <div>
                        <div class="row">
                            <div class="col-sm-3"><label>Category name</label></div>
                            <div class="col-sm-3">
                                <input type="text" name="CategoryName" id="CategoryName" class="form-control" value="@ViewBag.Categorynamesearch" />
                            </div>
                            <div class="col-sm-3"><label>Published</label></div>
                            <div class="col-sm-3">
                                <input type="hidden" id="hiddenpublished" value="@ViewBag.publishedsearch" />
                                <select class="form-control" id="SearchPublishedId" name="published">
                                    <option value="All">All</option>
                                    <option value="1">Published only</option>
                                    <option value="0">Unpublished only</option>
                                </select>
                            </div>
                        </div>
                        <br><br>
                        <div style="text-align:center;">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp; Search</button>
                        </div>
                    </div>
                }


            </div>
        </div>

        <div class="form-group">
            <div style="text-align:center;">
                @if (ViewBag.SuccessMessage != null)
                {
                    <label style="color:green;">@ViewBag.SuccessMessage</label>
                }
            </div>
        </div>
        <div class="form-horizontal">

            <div class="form-group">
                <table class="table table-bordered table-hover display" id="example">
                    <thead>
                        <tr>
                            <th hidden></th>
                            <th><input type="checkbox" id="chkAll" /></th>

                            <th>
                                @Html.DisplayNameFor(model => model.CategoryName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsPublished)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Displayorder)
                            </th>
                            <th>
                                Edit
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td hidden>@item.CategoryID</td>
                                <td><input type="checkbox" name="itemIds" class="checkboxGroups" value="@item.CategoryID" /></td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryName)
                                </td>
                                <td>
                                    @if (item.IsPublished == true)
                                    {
                                        <p>Yes</p>
                                        @*<i class="fa fa-check true-icon"></i>*@
                                    }
                                    else
                                    {
                                        <p>No</p>
                                    }

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Displayorder)
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "EditCategory", new { id=item.CategoryID},new{/*@class="btn btn-Se"*/})
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
