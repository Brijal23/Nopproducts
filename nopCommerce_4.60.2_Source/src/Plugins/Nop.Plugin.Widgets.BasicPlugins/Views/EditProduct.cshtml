                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.Taxcategory,Model.TaxCategories,new{@class = "form-control"})
                            @Html.ValidationMessageFor(m => m.Taxcategory, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion">
