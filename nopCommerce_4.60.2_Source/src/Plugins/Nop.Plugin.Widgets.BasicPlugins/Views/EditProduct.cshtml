                            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-2">
                            @Html.LabelFor(m => m.IsTextexempt)
                        </div>
                        <div class="col-md-10">
                            <div class="checkbox">
