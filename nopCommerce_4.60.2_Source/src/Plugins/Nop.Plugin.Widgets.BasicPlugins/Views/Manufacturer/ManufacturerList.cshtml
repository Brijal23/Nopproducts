@model IEnumerable<Nop.Plugin.Widgets.BasicPlugins.Models.Manufacturer>

<!DOCTYPE html>
<html>
<head>
    <title> Manufacturers</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.2/css/jquery.dataTables.min.css" />
    <style>
        /* Styling for the accordion */
        .accordion {
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-bottom: 10px;
        }

        .accordion-header {
            background-color: #f1f1f1;
            padding: 10px;
            cursor: pointer;
        }

            .accordion-header:hover {
                background-color: #ddd;
            }

            .accordion-header.active {
                background-color: #ccc;
            }

        .accordion-content {
            padding: 10px;
            /* display: none;*/
        }

            .accordion-content.show {
                display: block;
            }

        .row {
            width: 100%;
        }
    </style>

</head>
<body>
    <div class="container" style="padding: 10px; max-width:1600px;">
        <div class="row">
            <div class="col-md-6">
                <h4>Manufacturers</h4>
            </div>
            <div class="col-md-6">
                <button type="button" class="btn btn-danger" style="float:right; margin-left: 15px;" id="btnDelete">Delete (selected)</button>
                <a href='@Url.Action("AddManufacturer", "DemoManufacturer")' class="btn btn-primary" style="float: right;">Add manufacturer</a>
            </div>
        </div>

        <div class="accordion">
            <div class="accordion-header" onclick="toggleAccordion(event)"><i class="fa fa-search">&nbsp;&nbsp;&nbsp;</i>Search</div>
            <div class="accordion-content">
                    <div>
                        <div class="row">
                            <div class="col-sm-3" style="margin-left: 93px"><label>Manufacturer name</label></div>
                            <div class="col-sm-3" style="margin-left: -160px;margin-right: 150px;">
                                <input type="text" name="ManufacturerName" id="ManufacturerName" class="form-control"/>
                            </div>
                            <div class="col-sm-3"><label>Published</label></div>
                            <div class="col-sm-3" style="margin-left: -160px;">
                                <select class="form-control" id="SearchPublishedId" name="published">
                                    <option value="All">All</option>
                                    <option value="1">Published only</option>
                                    <option value="0">Unpublished only</option>
                                </select>
                            </div>
                        </div>
                        <br><br>
                        <div style="text-align:center;">
                            <button type="button" class="btn btn-primary" onclick="SearchList();"><i class="fa fa-search"></i>&nbsp; Search</button>
                        </div>
                    </div>
               
            </div>
        </div>

        <div class="form-group">
            <div style="text-align:center;">
                @if (ViewBag.SuccessMessage != null)
                {
                    <label style="color:green;">@ViewBag.SuccessMessage</label>
                }
            </div>
        </div>
        <div class="form-horizontal">

            <div class="form-group">
                <table class="table table-bordered table-hover display" id="example" style="width:100%;">
                    <thead>
                        <tr>
                            <th hidden></th>
                            <th><input type="checkbox" id="chkAll" /></th>

                            <th>
                                @Html.DisplayNameFor(model => model.ManufacturerName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsPublished)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Displayorder)
                            </th>
                            <th>
                                Edit
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td hidden>@item.ManufacturerID</td>
                                <td><input type="checkbox" name="itemIds" class="checkboxGroups" value="@item.ManufacturerID" /></td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ManufacturerName)
                                </td>
                                <td>
                                    @if (item.IsPublished == true)
                                    {
                                        <p>Yes</p>
                                        @*<i class="fa fa-check true-icon"></i>*@
                                    }
                                    else
                                    {
                                        <p>No</p>
                                    }

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Displayorder)
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "EditManufacturer", new { id=item.ManufacturerID},new{/*@class="btn btn-Se"*/})
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                pagingType: 'full_numbers',
                searching: false,
                sorting: [[0, 'desc']],
                aoColumnDefs: [
                    {
                        bSortable: false,
                        aTargets: [1,5]
                    }
                ]
            });
        });
         function SearchList() {
            var ManufacturerName = $("#ManufacturerName").val();
            var SearchPublishedId = $("#SearchPublishedId").val();

            $.ajax({
                type: 'Get',
                url: "/Admin/DemoManufacturer/Search?ManufacturerName=" + ManufacturerName + "&published=" + SearchPublishedId + "",
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                dataType: 'json',
                success: function (response) {
                    if (response.status == "success") {
                        //var table = $('#Imagegrid').DataTable();
                        //table.clear().draw();
                        if ($.fn.DataTable.isDataTable('#example')) {
                            $('#example').DataTable().destroy();
                        }
                        $('#example tbody').empty();

                        //table.fnClearTable();
                        var tr;
                        //Append each row to html table
                        for (var i = 0; i < response.data.length; i++) {
                            console.log(response.data);
                            tr = $('<tr/>');
                            tr.append("<td hidden>" + response.data[i].ManufacturerID + "</td>");
                            tr.append("<td><input type='checkbox' name='itemIds' class='checkboxGroups' value='" + response.data[i].ManufacturerID + "' /></td>");
                            tr.append("<td>" + response.data[i].ManufacturerName + "</td>");
                            if (response.data[i].IsPublished == true)
                                tr.append("<td><p>Yes</p></td>");
                            else tr.append("<td><p>No</p></td>");
                            tr.append("<td>" + response.data[i].Displayorder + "</td>");
                            tr.append('<td><a href="/Admin/DemoManufacturer/EditManufacturer/' + response.data[i].ManufacturerID + '">Edit</a></td>');
                            $('#example').append(tr);
                        }
                        $('#example').DataTable({
                            pagingType: 'full_numbers',
                            searching: false,
                            sorting: [[0, 'desc']],
                            aoColumnDefs: [
                                {
                                    bSortable: false,
                                    aTargets: [1, 5]
                                }
                            ]
                        });

                    }
                },
                error: function (err) {
                    alert("Error occurs" + err.responseText);
                }
            });
        }
        //$(document).ready(function () {
        //    $("#example input[id='chkAll']:checkbox").click(function () {
        //        if ($(this).is(":checked")) {
        //            //Check/uncheck all checkboxes in list according to main checkbox
        //            $("#example input[class='checkboxGroups']:checkbox").attr('checked', true);
        //        }
        //        else {
        //            $("#example input[class='checkboxGroups']:checkbox").attr('checked', false);
        //        }
        //    });
        //});
        $(document).ready(function () {
            $('#chkAll').click(function () {
                var isChecked = $(this).prop("checked");
                $('#example tr:has(td)').find('input[type="checkbox"]').prop('checked', isChecked);
            });
            $('#example tr:has(td)').find('input[type="checkbox"]').click(function () {
                var isChecked = $(this).prop("checked");
                var isHeaderChecked = $("#chkAll").prop("checked");
                if (isChecked == false && isHeaderChecked)
                    $("#chkAll").prop('checked', isChecked);
                else {
                    $('#example tr:has(td)').find('input[type="checkbox"]').each(function () {
                        if ($(this).prop("checked") == false)
                            isChecked = false;
                    });
                    $("#chkAll").prop('checked', isChecked);
                }
            });
        });
        //Delete event handler.
        $("body").on("click", "#btnDelete", function () {
            //Get all the Checked CheckBoxes.
            var checked = $("#example td input[type=checkBox]:checked");
            if (checked.length > 0) {

                //Display Confirmation Message.
                if (confirm("Are you sure you want to perform this action?")) {

                    //Loop and build an Array of CustomerId to be deleted.
                    var customerIds = new Array();
                    checked.each(function () {
                        var customerId = $(this).closest("tr").find("td").eq(0).html();
                        console.log($(this).closest("tr").find("td").eq(0).html());
                        customerIds.push(customerId);
                    });
                    console.log(customerIds);
                    //Call Delete Action method.

                    $.ajax({
                        type: "Get",
                        url: "/Admin/DemoManufacturer/DeleteManufacturer?data=" + customerIds + "",
                        headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                        dataType: "json",
                        success: function (response) {
                            if (response.status == "success") {
                                window.location.href = "/Admin/DemoManufacturer/ManufacturerList";
                            }
                            
                        }
                    });
                    
                }
            }
            else{
                alert("Please select row.");
            }
        });
        function toggleAccordion(event) {
            var accordionHeader = event.target;
            var accordionContent = accordionHeader.nextElementSibling;
            accordionHeader.classList.toggle("active");
            if (accordionContent.style.display === "block") {
                accordionContent.style.display = "none";
            } else {
                accordionContent.style.display = "block";
            }
        }

        $(document).ready(function () {

            var s = $("#hiddenpublished").val();
            $('select[name^="published"] option[value="' + s + '"]').attr("selected", "selected");
        });

        function checkvalidation() {
            var ManufacturerName = $("#ManufacturerName").val();
            console.log(ManufacturerName);
            if (ManufacturerName.trim().length == 0) {
                ManufacturerName = ManufacturerName.replace(" ", "");
                $("#ManufacturerName").val(ManufacturerName);
            }
        }
        function ConfirmDelete() {
            return confirm("Are you sure you want to delete this item?");
        }
    </script>
</body>
</html>