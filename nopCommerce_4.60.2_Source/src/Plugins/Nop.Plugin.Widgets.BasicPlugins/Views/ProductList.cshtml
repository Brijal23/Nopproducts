@model IEnumerable<Nop.Plugin.Widgets.BasicPlugins.Models.Product>

<!DOCTYPE html>
<html>
<head>
    <title> Products</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.2/css/jquery.dataTables.min.css" />
    <style>
        /* Styling for the accordion */
        .accordion {
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-bottom: 10px;
        }

        .accordion-header {
            background-color: #f1f1f1;
            padding: 10px;
            cursor: pointer;
        }

            .accordion-header:hover {
                background-color: #ddd;
            }

            .accordion-header.active {
                background-color: #ccc;
            }

        .accordion-content {
            padding: 10px;
            /* display: none;*/
        }

            .accordion-content.show {
                display: block;
            }

        .row {
            /* display: block !important;*/
            width: 100%;
        }
    </style>

</head>
<body>
    <div class="container" style="padding: 10px; max-width:1600px;">
        <div class="row mb-2">
            <div class="col-md-6">
                <h2>Products</h2>
            </div>
            <div class="col-md-6">
                <button type="button" class="btn btn-danger" style="float:right;margin-left: 15px;" id="btnDelete">Delete (selected)</button>
                <a href='@Url.Action("AddProduct", "DemoProduct")' class="btn btn-primary" style="float: right;">Add product</a>
            </div>
        </div>

        <div class="accordion">
            <div class="accordion-header" onclick="toggleAccordion(event)"><i class="fa fa-search">&nbsp;&nbsp;&nbsp;</i>Search</div>
            <div class="accordion-content">

                @*@using (Html.BeginForm("ProductList", "DemoProduct", FormMethod.Get, new { }))
                {*@
                <div>
                    <div class="row mb-2">
                        <div class="col-sm-4">
                            <label>Product name</label>

                            <input type="text" name="productName" id="productName" class="form-control" autocomplete="off" />
                        </div>
                        <div class="col-sm-4">
                            <label>Category</label>

                            <select class="form-control" id="SearchCategoryId" name="category">
                                <option value="0">All</option>
                                <option value="2">Breakfast &amp; Brunch</option>
                                <option value="1">Lunch &amp; Dinner</option>
                                <option value="3">Baked Goods &amp; Desserts</option>
                                <option value="4">Drinks</option>
                            </select>
                        </div>

                        <div class="col-sm-4">
                            <label>Published</label>

                            <select class="form-control" id="SearchPublishedId" name="published">
                                <option value="All">All</option>
                                <option value="1">Published only</option>
                                <option value="0">Unpublished only</option>
                            </select>
                        </div>

                    </div>
                    <br><br>
                    <div style="text-align:center;">
                        <button type="button" class="btn btn-primary" onclick="SearchList();"><i class="fa fa-search"></i>&nbsp; Search</button>
                    </div>
                </div>
                @* }
                *@

            </div>
        </div>

        <div class="form-group">
            <div style="text-align:center;">
                @if (ViewBag.SuccessMessage != null)
                {
                    <label style="color:green;">@ViewBag.SuccessMessage</label>
                }
            </div>
        </div>
        <div class="form-horizontal">

            <div class="form-group">
                <table class="table table-bordered table-hover display" id="example">
                    <thead>
                        <tr>
                            <th hidden></th>
                            <th><input type="checkbox" id="chkAll" /></th>
                            <th>
                                Picture
                            </th>
                            <th>
                                Product name
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SKU)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StockQuantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsPublished)
                            </th>
                            <th>
                                Edit
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td hidden>@item.ProductID</td>
                                <td><input type="checkbox" name="itemIds" class="checkboxGroups" value="@item.ProductID" /></td>
                                <td>
                                    @if (item.SFile == null)
                                    {
                                        <img src="https://cafe.shopfast.net/images/thumbs/default-image_100.png" style="height: 100px; width: 150px;">
                                    }
                                    else
                                    {
                                        <img src="@item.SFile" style="height: 100px; width: 150px;" />
                                    }

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SKU)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SPrice)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockQuantity)
                                </td>
                                <td>
                                    @if (item.IsPublished == true)
                                    {
                                        <p>Yes</p>
                                        @*<i class="fa fa-check true-icon"></i>*@
                                    }
                                    else
                                    {
                                        <p>No</p>
                                    }

                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "EditProduct", new { id=item.ProductID},new{})
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                pagingType: 'full_numbers',
                searching: false,
                sorting: [[0, 'desc']],
                aoColumnDefs: [
                    {
                        bSortable: false,
                        aTargets: [1, 2, 8]
                    }
                ]
            });
        });
        function SearchList() {
            var productName = $("#productName").val();
            var SearchCategoryId = $("#SearchCategoryId").val();
            var SearchPublishedId = $("#SearchPublishedId").val();

            $.ajax({
                type: 'Get',
                url: "/Admin/DemoProduct/Search?productName=" + productName + "&SearchCategoryId=" + SearchCategoryId + "&SearchPublishedId=" + SearchPublishedId + "",
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                dataType: 'json',
                success: function (response) {
                    if (response.status == "success") {
                        //var table = $('#Imagegrid').DataTable();
                        //table.clear().draw();
                        if ($.fn.DataTable.isDataTable('#example')) {
                            $('#example').DataTable().destroy();
                        }
                        $('#example tbody').empty();

                        //table.fnClearTable();
                        var tr;
                        //Append each row to html table
                        for (var i = 0; i < response.data.length; i++) {
                            console.log(response.data);
                            tr = $('<tr/>');
                            tr.append("<td hidden>" + response.data[i].ProductID + "</td>");
                            tr.append("<td><input type='checkbox' name='itemIds' class='checkboxGroups' value='" + response.data[i].ProductID + "' /></td>");
                            tr.append("<td><img src='" + response.data[i].SFile + "' style='height: 100px; width: 150px;'></img></td>");
                            tr.append("<td>" + response.data[i].ProductName + "</td>");
                            tr.append("<td>" + response.data[i].SKU + "</td>");
                            tr.append("<td>" + response.data[i].SPrice + "</td>");
                            tr.append("<td>" + response.data[i].StockQuantity + "</td>");
                            if (response.data[i].IsPublished == true)
                                tr.append("<td><p>Yes</p></td>");
                            else tr.append("<td><p>No</p></td>");
                            tr.append('<td><a href="/Admin/DemoProduct/EditProduct/' + response.data[i].ProductID + '">Edit</a></td>');
                            $('#example').append(tr);
                        }
                        $('#example').DataTable({
                            pagingType: 'full_numbers',
                            searching: false,
                            sorting: [[0, 'desc']],
                            aoColumnDefs: [
                                {
                                    bSortable: false,
                                    aTargets: [1, 2, 8]
                                }
                            ]
                        });

                    }
                },
                error: function (err) {
                    alert("Error occurs" + err.responseText);
                }
            });
        }
